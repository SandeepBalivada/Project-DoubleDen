<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandeep.doubleden.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="Enter  .com   urls"
            android:inputType="textPersonName" />
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/search"
        android:clickable="true"
        android:onClick="search1"
        android:layout_marginStart="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv1"/>

    <ImageView
        android:src="@drawable/search"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:onClick="search2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/iv2"/>

</LinearLayout>


    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:id="@+id/wv1"
        android:layout_below="@+id/ll1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:weightSum="1"
        android:layout_below="@+id/wv1"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/iv3"
            android:clickable="true"
            android:onClick="facebook1"
            android:src="@drawable/facebook"
            android:layout_weight="0.47" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/iv4"
            android:clickable="true"
            android:onClick="gmail1"
            android:src="@drawable/gmail"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/iv5"
            android:clickable="true"
            android:onClick="linkedin1"
            android:src="@drawable/linkedin"
            android:layout_weight="1.14" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="115dp"
            android:clickable="true"
            android:onClick="twitter1"
            android:layout_height="40dp"
            android:src="@drawable/twitter" />

    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/ll2"
        android:layout_alignParentStart="true"
        android:id="@+id/wv2">

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/wv2"
        android:id="@+id/ll3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/iv7"
            android:clickable="true"
            android:onClick="facebook2"
            android:src="@drawable/facebook"
            android:layout_weight="0.47" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/iv8"
            android:clickable="true"
            android:onClick="gmail2"
            android:src="@drawable/gmail"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="linkedin2"
            android:id="@+id/iv9"
            android:src="@drawable/linkedin"
            android:layout_weight="1.14" />

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="twitter2"
            android:src="@drawable/twitter" />

    </LinearLayout>


</RelativeLayout>
